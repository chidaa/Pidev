{% extends "base.html.twig"%}
{% block title %}Liste des garanties{% endblock %}
 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css')}}">
     <link rel="stylesheet" href="{{ asset('theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css')}}">
 {% endblock %}
{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Garanties</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="#">Dashboard</a></li>
                        <li><a href="#">Table</a></li>
                        <li class="active">Data table</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Data Table</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Id Produit</th>
                                    <th>Id Client</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for garan in garanties %}
                                    <tr>
                                        <td>{{ garan.id }}</td>
                                        <td>{{ garan.IdProduit }}</td>
                                        <td>{{ garan.IdClient }}</td>
                                        <td>{{ garan.description }}</td>
                                        <td align="center">
                                            {#   <a href="{{ path('client_by_id',{'id':clients.id }) }}" class="btn btn-primary "> <i class="fas fa-eye"></i> DÃ©tails</a>#}
                                            <a href="{{ path('modifier_garantie',{'id':garan.id }) }}" class="btn btn-warning"> <i class="fas fa-pencil-alt"></i> Modifier</a>
                                            <a href="{{ path('supprimer_garantie',{'id':garan.id }) }}" class="btn btn-danger" onclick="return confirm('Voulez vous vraiment supprimer cette Garantie ?')"> <i class="fas fa-trash"></i> Supprimer</a>

                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
    </section>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
{% endblock %}

