{% extends 'base.html.twig' %}

{% block title %}Ajouter Reclamation {% endblock %}

{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ajouter Reclamation</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        {#                        <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>#}
                        {#                        <li class="breadcrumb-item "><a href="{{ path('user_list') }}">Utilisateurs</a> </li>#}
                        {#                        <li class="breadcrumb-item active">Ajouter utilisateur</li>#}
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-info">
                    <div class="card-header">
                        <br>
                        <div class="card-body pad">
                            {% form_theme format 'bootstrap_4_layout.html.twig' %}
                            {% form_theme format 'bootstrap_4_layout.html.twig' %}
                            {{ form_start(format) }}
                            {{ form_errors(format) }}

                            <div class="form-group">
                                {{ form_label(format.email) }}
                                {{ form_widget(format.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(format.description) }}
                                {{ form_widget(format.description) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(format.theme) }}
                                {{ form_widget(format.theme) }}
                            </div>
                            {{ form_end(format) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script>
        document.getElementById('users').classList.add("active");
    </script>
{% endblock %}